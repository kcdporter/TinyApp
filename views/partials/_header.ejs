<h1> TinyApp </h1>
<body>
  <table>
    <tr>
      <td>Login </td>
      <td>
        <% if(!username) { %> 
          <form method = "POST" action="/login">
            <input class="form-control" type="text" name="username" placeholder="Username" style="width: 300px; margin: 1em">
            <button type = "submit" > Login </button> 
          </form>
        <% } else { %>
          Hello, <%= username %>
        <% } %>
      </td>
    </tr>
  </table>
</body>